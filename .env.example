# Anthropic API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Your Anthropic API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Anthropic model to use
# Options: claude-opus-4-5-20251101, claude-sonnet-4-20250514, claude-3-5-sonnet-20241022
ANTHROPIC_MODEL=claude-opus-4-5-20251101

# Maximum tokens for LLM responses
ANTHROPIC_MAX_TOKENS=16000

# Timeout for API calls in seconds
ANTHROPIC_TIMEOUT=300

# Retry configuration
ANTHROPIC_MAX_RETRIES=5
ANTHROPIC_RETRY_MIN_WAIT=4
ANTHROPIC_RETRY_MAX_WAIT=10

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
